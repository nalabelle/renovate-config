{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "configMigration": true,
  "extends": [
    "config:best-practices",
    "group:allNonMajor",
    // Enables dockerfile version updates, not just digests
    "preview:dockerVersions",
