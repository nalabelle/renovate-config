{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "configMigration": true,
  "extends": [
    "config:best-practices",
    "group:allNonMajor",
    // Enables dockerfile version updates, not just digests
    "preview:dockerVersions",
    ":automergeMinor",
    ":automergeLinters",
    ":automergeDigest",
    ":rebaseStalePrs",
    ":separateMajorReleases",
    "docker:enableMajor",
  ],
  "schedule": [
    "on tuesday"
  ],
  "dockerfile": {
    // Support Earthfile as dockerfile for now
    "fileMatch": ['(^|/|\\.)Earthfile$']
  },
  "customManagers": [
    {
      // Configures Renovate to look for items like 
      "customType": "regex",
      "fileMatch": ['(^|/|\\.)([Dd]ocker|[Cc]ontainer)file$', '(^|/)([Dd]ocker|[Cc]ontainer)file[^/]*$', '(^|/|\\.)Earthfile$'],
      "matchStrings": [
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s(ENV|ARG) .*?_VERSION=(?<currentValue>.*)\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
  ],
}
